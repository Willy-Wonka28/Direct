generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Transaction {
  id           String @id @default(cuid())
  sender       String
  publicKey    String
  senderToken  Token
  senderAmount Float // in senderToken

  receiverAmount    Float // in receiverCurrency
  receiverCurrency  FiatCurrency @default(NGN)
  // receiverCurrency: 
  receiverAccountNo String
  receiverBank      Banks
  receiverName      String

  status    TransactionStatus @default(PENDING)
  // timestamp DateTime? // when transaction enters wallet
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
}

enum Token {
  SOL
  USDT
  BTC
  ETH
  USDC
}

enum FiatCurrency {
  USD
  EUR
  GBP
  NGN
}

enum Banks {
  ACCESS_BANK
  GTBANK_PLC
  ZENITH_BANK_PLC
  UNITED_BANK_FOR_AFRICA
  FIRST_BANK_OF_NIGERIA
  STERLING_BANK
  ECOBANK_BANK
  POLARIS_BANK
  WEMA_BANK
  UNITY_BANK
  FIDELITY_BANK
  PROVIDUS_BANK
  KUDA_MICROFINANCE_BANK
  PALMPAY
  OPAY
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
}
